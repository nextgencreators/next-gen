{% extends 'partials/base.html.twig' %}

{% block content %}

<br>
<br>
<div class="container">
   <!--    <div class="container-inner"> -->
   <h3 class="page-header white-text">{{ page.header.title }}</h3>
   <div class="section"></div>
   <div class="section">
   <div class="row">
         <div class="col m12 l7 gi-header">
           <p class="white-text source-sans-pro top-align-p spacing">{{ page.header.about_text }}</p>
        </div>
         <div class="col m10 push-m1 pull-m1 l5">
             <img class="responsive-img z-depth-2" src="{{ page.header.about_img|first.path }}">
         </div>
      </div>
   </div>
   <div class="section content-block">
    <h4 class="header center white-text">How We Work</h4>
      <div class="col center-align s12 m7 spacing">
         <p class="white-text zero-line-height">{{ page.header.how_work_subtext }}</p>
      </div>
   <div class="row">
      
      <div class="row">
         <div class="col s12 m4">
            <div class="icon-block">
               <h2 class="center light-blue-text"><i class="approach-icon material-icons">{{ page.header.quality1_icon }}</i></h2>
               <h5 class="white-text center">{{ page.header.quality1 }}</h5>
               <p class="white-text source-sans-pro light">{{ page.header.quality1_description }}</p>
            </div>
         </div>
         <div class="col s12 m4">
            <div class="icon-block">
               <h2 class="center light-blue-text"><i class="approach-icon material-icons">{{ page.header.quality2_icon }}</i></h2>
               <h5 class="white-text center">{{ page.header.quality2 }}</h5>
               <p class="white-text source-sans-pro light">{{ page.header.quality2_description }}</p>
            </div>
         </div>
         <div class="col s12 m4">
            <div class="icon-block">
               <h2 class="center light-blue-text"><i class="approach-icon material-icons">{{ page.header.quality3_icon }}</i></h2>
               <h5 class="white-text center">{{ page.header.quality3 }}</h5>
               <p class="white-text source-sans-pro light">{{ page.header.quality3_description }}</p>
            </div>
         </div>
      </div>
   </div>
 </div>
 <div class="section content-block">
  <h4 class="header center white-text">Fund Allocation</h4>
      <div class="col center-align s12 m7 spacing">
         <p class="white-text zero-line-height">{{ page.header.fund_allocation_subtext }}</p>
      </div>
      <div class="section"></div>
      <div class="row">
        <div class="col s8 push-s2 pull-s2">
          <canvas id="bar-chart-grouped" ></canvas>
        </div>
      </div>
      <div class="row">
        <div class="col s10 push-s1 pull-s1">
           <p class="white-text source-sans-pro">{{ page.header.fund_allocation_description }}</p>
        </div>
      </div>
 </div>
 <div class="section content-block">
   <!-- adfasdf -->
       <h4 class="header center white-text">Outreach</h4>
      <div class="col center-align s12 m7 spacing">
         <p class="white-text zero-line-height">{{ page.header.outreach_subtext }}</p>
      </div>
   <div class="row valign-wrapper">
    <div class="col m1 right-align">
<li onclick="incr(-1)" class="waves-effect"><a href="#!"><i class="arrow-big material-icons">chevron_left</i></a></li>
    </div>
     <div class="col m10">
       <div class="section"></div>
       {% for image in page.media.images%}
             <div id="{{ loop.index }}" class="l{{ loop.index }} slider-image valign-wrapper center-align row">
                <div class="col m12">
                  <div class="hmph">
                    <img class="slider-img responsive-img z-depth-1" src="{{ image.url }}">
                  </div>
                </div>
             </div>
        {% endfor %}

        
     
        <ul class="pagination center">
          {% for image in page.media.images%}
            <li onclick="curr({{ loop.index }})" class="img-num waves-effect"><a href="#!">{{ loop.index }}</a></li>
          {% endfor %}
        </ul>
       
     </div>
     <div class="col m1 left-align">
 <li onclick="incr(1)" class="img-num waves-effect"><a href="#!"><i class="arrow-big material-icons">chevron_right</i></a></li>
    </div>
   </div>
   <!-- adf -->
 </div>
   
   <div class="section content-block white-text">
      <h4 class="header center white-text">FAQs</h4>
      <div class="col center-align s12 m7 spacing">
         <p class="white-text zero-line-height">{{ page.header.faq_subtext }}</p>
      </div>
      <div class="section">
      </div>
      <div class="row">
      <div class="col l12 m12 s12">
      <ul class="collapsible" data-collapsible="accordion">
        {% for faq in page.header.faq %}
          <li>
            <div class="collapsible-header"><i class="arrow material-icons">keyboard_arrow_right</i>{{ faq.question }}</div>
            <div class="collapsible-body"><span class="source-sans-pro">{{ faq.answer }}</span></div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% endblock %}